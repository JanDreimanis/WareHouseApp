<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="warehouse.controllers.products.AddProductController"
            prefHeight="400.0" prefWidth="600.0">
    <AnchorPane prefHeight="338.0" prefWidth="464.0">
        <VBox prefHeight="256.0" prefWidth="404.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <TextField fx:id="name" promptText="Name">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="quantity"  layoutX="20.0" layoutY="30.0" promptText="Quantity">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="unit" layoutX="10.0" layoutY="62.0" promptText="Unit">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="price" layoutX="10.0" layoutY="62.0" promptText="Price">
                <VBox.margin>
                    <Insets left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TextField>
<!--            <TextField fx:id="suppliersId" layoutX="10.0" layoutY="62.0" promptText="Suppliers ID">-->
<!--                <VBox.margin>-->
<!--                    <Insets left="10.0" right="10.0" top="20.0"/>-->
<!--                </VBox.margin>-->
<!--            </TextField>-->
            <HBox alignment="CENTER" prefHeight="47.0" prefWidth="404.0" spacing="30.0">
                <VBox.margin>
                    <Insets top="25.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="20.0"/>
                </padding>
                <Button onAction="#addProduct" prefHeight="66.0" prefWidth="100.0" text="Save"/>
                <Button onAction="#cancel" prefHeight="66.0" prefWidth="100.0" text="Cancel"/>
            </HBox>
        </VBox>
    </AnchorPane>
</AnchorPane>
